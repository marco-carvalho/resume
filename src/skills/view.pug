        .col-12.col-md-6
            strong Back-End
            ul.list-inline
                li.list-inline-item(ng-repeat='skill in backEnd') {{skill}}
            strong Front-End
            ul.list-inline
                li.list-inline-item(ng-repeat='skill in frontEnd') {{skill}}
        .col-12.col-md-6
            strong Infrastructure
            ul.list-inline
                li.list-inline-item(ng-repeat='skill in infra') {{skill}}
